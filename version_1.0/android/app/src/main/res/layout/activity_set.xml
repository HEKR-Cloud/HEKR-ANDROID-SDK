<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/beijing"
                tools:context="com.hekr.android.app.SetActivity">

    <RelativeLayout
            android:id="@+id/stylebar"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:background="#00000000"
            >
        <com.hekr.android.app.ui.IconView
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="7dp"
                android:clickable="true"
                android:onClick="navBack"
                android:padding="10dp"
                android:textSize="20dp"
                android:textColor="#ffffffff"
                android:text="&#xf060;" />
        <TextView
                android:id="@+id/devicetype"
                android:textColor="#ffffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="设置"
                android:textSize="20dp">

        </TextView>

    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/stylebar"
            android:orientation="vertical"
            android:weightSum="1">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.18">
                <!--<com.hekr.android.app.ui.RoundBorderRelativeLayout-->
                        <!--android:layout_width=""-->
                        <!--android:layout_height="">-->
                     <!--<ImageView android:layout_width=""-->
                                <!--android:layout_height=""/>-->

                <!--</com.hekr.android.app.ui.RoundBorderRelativeLayout>-->

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:weightSum="1"
                    android:layout_marginLeft="40px"
                    android:layout_marginRight="40px"
                    android:orientation="vertical">

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.25"
                            android:orientation="horizontal">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="设备名称"
                                    android:textColor="#ffffffff"/>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/deviceName"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:text="HEKR-01"
                                    android:textColor="#ffffffff"/>

                            <View   android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:layout_alignParentBottom="true"
                                    android:background="#28ffffff">

                            </View>

                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.25">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="设备品牌"
                                android:textColor="#ffffffff"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/deviceBrand"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:text="B-LINK"
                                android:textColor="#ffffffff"/>
                            <View android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_alignParentBottom="true"
                                android:background="#28ffffff">

                        </View>

                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.25">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="设备型号"
                                android:textColor="#ffffffff"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/deviceType"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:text="HEKR-01"
                                android:textColor="#ffffffff"/>
                            <View   android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_alignParentBottom="true"
                                android:background="#28ffffff">

                        </View>

                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.25">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="固件版本"
                                android:textColor="#ffffffff"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/firmwareVersion"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:text="1.0.0.0"
                                android:textColor="#ffffffff"/>
                            <View   android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_alignParentBottom="true"
                                android:background="#28ffffff">

                        </View>

                    </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.42"
                    android:layout_marginRight="40px"
                    android:layout_marginLeft="40px">
                    <Button android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginTop="171px"
                            android:id="@+id/control"
                            android:text="进入控制面板"
                            android:textColor="#ffffffff"
                            android:background="#ff32bef2"/>
                    <Button android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:id="@+id/update"
                        android:layout_below="@+id/control"
                        android:layout_marginTop="56px"
                        android:text="已更新设备"
                        android:textColor="#ffffffff"
                        android:background="#fff34141"
                        />
            </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
